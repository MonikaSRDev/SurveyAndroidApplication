<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mithraapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="locale"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mithra_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/mithra_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".VideoFeedbackScreen"
            android:exported="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".ActivitiesScreen"
            android:exported="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".VideoScreen"
            android:exported="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".FullScreenVideoView"
            android:exported="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".SurveyScreen"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".ParticipantsScreen"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".ParticipantLandingScreen"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".DashboardScreen"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".ParticipantProfileScreen"
            android:screenOrientation="sensorLandscape"
            android:configChanges="locale"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>