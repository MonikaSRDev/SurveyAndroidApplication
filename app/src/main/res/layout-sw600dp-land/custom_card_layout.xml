<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questionCardView"
    android:layout_width="1130dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/main_card_image"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.55"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/questionNumbers"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="58dp"
            android:gravity="center|end"
            android:text="5 "
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/questionsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="227dp"
            android:gravity="center"
            android:text="Feeling tired or having little energy."
            android:textColor="#443737"
            android:textSize="40sp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="313dp"
            android:layout_marginEnd="318dp"
            android:layout_marginBottom="58dp"
            android:background="@drawable/linear_gradient_color"
            android:gravity="center"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/totalQuestions"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="100dp"
            android:layout_toStartOf="@+id/questionsTV"
            android:layout_toEndOf="@+id/questionNumbers"
            android:gravity="start|center_vertical"
            android:text="Of 9"
            android:textColor="#000000"
            android:textSize="35sp" />

        <RadioGroup
            android:id="@+id/questionOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nextButton"
            android:layout_below="@+id/questionsTV"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="67dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/optionRadioBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/zero_twentyfive_btn"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/optionRadioBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/twentysix_fifty_btn"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/optionRadioBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/fiftyone_seventyfive_btn"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/optionRadioBtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/seventysix_hundred_btn"
                android:textColor="@color/black" />
        </RadioGroup>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
