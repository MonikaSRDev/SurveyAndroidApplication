<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen_background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="969dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="178dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/socioEnglishButton"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/left_toggle_selected_button"
            android:text="@string/english"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/socioKannadaButton"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/right_toggle_button"
            android:text="@string/kannada"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1000dp"
        android:layout_height="600dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="133dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="44dp"
        android:background="@color/screen_background"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toTopOf="@+id/socioNextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/socioDemographyTitleTV">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/educationYearsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/years_of_education"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/maritalStatusTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/marital_status"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/occupationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/occupation"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/nearestPHCTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/nearest_phc"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/religionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/religion"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/familyIncomeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/total_family_income_per_month"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="20dp">

                <EditText
                    android:id="@+id/educationYearsET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/unmarriedButton"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:background="@drawable/inputs_background"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/unmarried"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color" />

                    <Button
                        android:id="@+id/marriedButton"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:background="@drawable/inputs_background"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/married"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color" />

                </LinearLayout>

                <EditText
                    android:id="@+id/occupationET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/nearestPHCET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/religionET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/familyIncomeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/casteTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/caste"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/familyMembersTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/number_of_family_members"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/earningMembersTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/earning_members"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/CBOMeetingsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/CBOMeetings"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/familyTypeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/type_of_family"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/associationDurationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/association_duration"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/casteET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/familyMembersET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/earningMembersET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/CBOMeetingsET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="40dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp">

                    <Button
                        android:id="@+id/nuclearButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inputs_background"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/nuclear"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/jointButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inputs_background"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/joint"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/associationDurationET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs_background"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/socioNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="54dp"
            android:layout_marginStart="436dp"
            android:layout_marginEnd="436dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/socioDemographyTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="864dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/socio_demography"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>