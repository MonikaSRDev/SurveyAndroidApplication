<!--            android:text="Logout"-->
<!--            android:elevation="10dp"-->
<!--            android:background="@drawable/rounded_corners"-->
<!--            android:textColor="@color/text_color"-->
<!--            android:fontFamily="@font/open_sans_semibold"-->
