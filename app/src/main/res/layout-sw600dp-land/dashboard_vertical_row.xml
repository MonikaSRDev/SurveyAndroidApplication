<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1072dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:id="@+id/verticalRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/participantIDValTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="000"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:layout_weight="0.6"
            android:layout_margin="10dp" />

        <LinearLayout
            android:id="@+id/detailsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.4"
            android:paddingStart="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/partDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/open_sans"
                android:gravity="start"/>

            <TextView
                android:id="@+id/partDetailsAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/open_sans"
                android:gravity="start" />

            <TextView
                android:id="@+id/partDetailsVillage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/village"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/open_sans"
                android:gravity="start" />

        </LinearLayout>

        <ImageView
            android:id="@+id/enrollmentStatusIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/enrolment_status_icon"/>

        <ImageView
            android:id="@+id/surveyStatusIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/survey_status_icon"/>

        <TextView
            android:id="@+id/moduleStatusDashboardTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00%"
            android:textSize="14sp"
            android:layout_weight="1.5"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/referralStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="14sp"
            android:layout_weight="1.5"
            android:layout_margin="10dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:gravity="center_vertical" />

    </LinearLayout>
</androidx.cardview.widget.CardView>