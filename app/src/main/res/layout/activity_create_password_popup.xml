<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/screen_background"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="75dp"
        android:paddingEnd="75dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/userNameTVPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Password"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/userNameETPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:textSize="16sp"
            android:text="Your new password must be different from previous used passwords."
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/userPhoneNumTVPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/userPhoneNumETPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs_background"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:padding="5dp"
            android:inputType="textPassword|numberPassword"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/userSHGTVPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Must be at least 8 characters."
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/userCurrentStatusTVPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="@color/text_color"
            android:layout_gravity="start"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/userCurrentStatusSpinnerPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs_background"
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:inputType="numberPassword|textPassword"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/userSHGTVPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both passwords must match."
            android:textColor="@color/text_color"
            android:fontFamily="@font/open_sans"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/saveCurrentStatusButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:background="@drawable/status_button"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:padding="5dp"
            android:layout_margin="20dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>