<resources>
    <style name="custom_tab_text_appearance_profile"
        android:parent="TextAppearance.Design.Tab"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="custom_tab_text_appearance_participant"
        android:parent="TextAppearance.Design.Tab"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="floating_button_style"
        android:parent="com.google.android.material.floatingactionbutton.FloatingActionButton"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <item name="android:backgroundTint">@drawable/circular_gradient</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#a0a0a0</item>
        <item name="android:progressTint">#f4511e</item>
        <item name="android:thumbTint">#f4511e</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_bar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_bar_track</item>
        <item name="android:scrollbarSize">10dp</item>
    </style>
</resources>
